<% title "Acquisitions Settings", false %>


<div class="row">
	<div class="col-md-8">
		<%= panel(title: "Acquisitions Settings", icon: "cog") do %>

			<%= simple_form_for PapyrusSettings, url: settings_path, method: :patch do |f| %>
			  <h5 class="text-black">Acquisition Request Settings</h5>

        <%= f.label :acquisition_sources, "Acquisitions Sources"%>
        <%= f.input :acquisition_sources, label: false, as: :array %>

	      <%= f.label :acquisition_reasons, "Acquisitions Reasons"%>
	      <%= f.input :acquisition_reasons, label: false, as: :array %>
	      <p class="small">Press Ctrl-Shift-Del after clicking on the text box to remove the box.</p>

        <hr/>
			  <h5 class="text-black mt-4">Send To Acquisitions Settings</h5>

        <%= f.input :email_acquisitions_to, label: "Acquisitions Email" %>
        <%= f.input :email_acquisitions_to_bookstore, label: "Bookstore Email" %>
        <%= f.input :email_acquisitions_subject, label: "Subject" %>
        <%= f.input :email_acquisitions_body, as: :text, label: "Body", input_html: { rows: 5 } %>

        <p class="small">The email will be sent to the above address and inlcude Acquistion Request, Item and Course details.</p>

			  <input type="hidden" name="return_to" value="acquisitions"/>
				<%= f.submit "Save Settings", class: "btn btn-success mt-4" %>
			<% end %>
		<% end %>
	</div>
	<div class="col-md-4">
		<%= panel(title: "Acquisitions Settings Help", icon: "question") do %>
			<dl>
				<dt>Acquisition Request Settings</dt>
				<dd>Source names for item acquisitions and reasons to acquire items.</dd>
				<hr/>
				<dt>Send To Acquisitions Settings</dt>
				<dd>Email settings that will be used to send email to either bookstore or acquistions department</dd>
			</dl>
		<% end %>
	</div>
</div>
