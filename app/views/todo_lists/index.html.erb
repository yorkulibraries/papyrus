<% title "Todo Lists", false %>

<div class="row">
	<div class="col-md-12">
		<%= panel(title: "Todo Lists (EXPERIMENTAL)", icon: "list") do %>

			<% if params[:which] == TodoList::STATUS_DONE %>
				<%= link_to todo_lists_path(), class: "btn btn-sm btn-link  pull-right" do %>
					<i class="fa fa-list"></i> New Todo Lists
				<% end %>
				<h4>Completed Lists</h4>
				<hr/>
			<% else %>
				<div class="row">

	        <div class="col-sm-4 col-xs-4">
	          <%= link_to new_todo_list_path, class: "btn btn-sm btn-primary", remote: true do %>
	            <i class="fa fa-plus"></i> Add a Todo List
	          <% end %>
	        </div>

	        <div class="col-sm-8 col-xs-8">
	          <%= link_to todo_lists_path(which: TodoList::STATUS_DONE), class: "btn btn-sm btn-link  pull-right" do %>
	            <i class="fa fa-list"></i> Completed Lists
	          <% end %>
	        </div>
	      </div>

	    	<hr/>

				<div id="todo_list_form_holder" class="form_holder">
				</div>
			<% end %>

			<% @todo_lists.each do |todo_list| %>
				<%= render partial: todo_list, locals: { show: "div" } %>
			<% end %>


		<% end %>
	</div>
</div>
