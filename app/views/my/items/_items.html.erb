<section class="items hide" title="list of items">
	<h2>Assigned Items <%= "- " + params[:course].gsub("_", " ") if params[:course]%></h2>

	<div class="tabbable" title="navigation for items">
    	<ul class="nav nav-tabs">
				<li class="active"><a href="#book" data-toggle="tab" title="List All Books">Books</a></li>
				<li><a href="#course_kit" data-toggle="tab" title="List All Course Kits">Course Kits</a></li>
				<li><a href="#article" data-toggle="tab" title="List All Articles">Articles</a></li>
    	</ul>
    	<div class="tab-content">
			<% @items_by_type = Hash.new %>

			<% 	@items_grouped.each do |type, items| %>
					<% @items_by_type["#{type}"] = capture do %>

					<ul class="unstyled">
					<% items.each do |item| %>
						<li class="item list <%= cycle("odd", "event") %>" title="Item <%=item.title %>">
							<% connection = item.item_connections.current.find_by_student_id(@student.id) %>
							<% if connection %>
								<span class="trivial float-right" title="Item Avaialblity">
									<%= connection.expires_on.strftime("Expires after %b %d, %Y") if connection.expires_on%>
									<%= "Unlimited Access" unless connection.expires_on %>
								</span>
							<% end %>

							<h4>
								<%= item.title %>
								<% if item.course_kit? %>
				          <small class="text-muted"><%= item.course_code %></small>
				        <% end %>
							</h4>

								<%= render "items_files" %>
								<%= render "items_urls" %>


						</li>
					<% end %>

					</ul>
					<% end %>
			<% end %>


			<div id="book" class="tab-pane active">
				<% if @items_by_type["book"] %>
					<%= @items_by_type["book"] %>
				<% else %>
					<p>There are no books assigned.</p>
				<% end %>
			</div>
			<div id="course_kit" class="tab-pane">
				<% if @items_by_type["course_kit"] %>
					<%= @items_by_type["course_kit"] %>
				<% else %>
					<p>There are no course kits assigned.</p>
				<% end %>
			</div>
			<div id="article" class="tab-pane">
				<% if @items_by_type["article"] %>
					<%= @items_by_type["article"] %>
				<% else %>
					<p>There are no articles assigned.</p>
				<% end %>
			</div>

    	</div>
    </div>
</section>
