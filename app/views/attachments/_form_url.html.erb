
<%= simple_form_for [@item, @attachment], remote: true do |f| %>
		<%= f.input :name, required: true %>
		<%= f.input :url, required: true %>
		<%= f.label :access_code_required, "Access Code Required? "%>
		<%= f.input :access_code_required, label: false, as: :radio_buttons %>

	<hr/>
		<%= f.button :submit, "Save URL", class: "btn btn-primary" %>

		<% if request.xhr? %>
			<%= link_to "Cancel", "#", class: "btn btn-outline-secondary", onclick: "$('#url_form_holder').addClass('d-none'); return false;" %>
		<% else %>
			<%= link_to "Cancel", item_path(@item), class: "btn btn-outline-secondary" %>
		<% end %>

<% end %>
