<%= simple_form_for @access_code, url: shared_access_codes_path, remote: (request.xhr? ? true: false ) do |f| %>
    <%= f.input :for, input_html: { class: "form-control mb-3"} %></div>
    <%= f.input :code, input_html: { class: "form-control mb-3"} %></div>
    <%= f.input :expires_at, as: :string, input_html: { class: "form-control datepicker mb-3"} %></div>
    <%= f.button :submit, "Save Access Code", class: "btn btn-primary" %>

    <% if request.xhr? %>
      <%= link_to "Cancel", "#", class: "btn", onclick: "$('#access_code_form_holder').empty(); return false;" %>
    <% else %>
      <%= link_to "Cancel", shared_access_codes_path, class: "btn" %>
    <% end %>

    <hr/>

<% end %>
