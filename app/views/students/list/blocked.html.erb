<% title "Blocked  Students", false %>

<div class="row">
	<div class="col-md-12">
		<%= panel(title: "Blocked Students", icon: "ban") do %>

		<div class="row">
			<div class="col-sm-12 col-xs-12">
				<%= render partial: "students/list/links.html.erb" %>
			</div>
		</div>

		<hr/>

		<% if @students %>
			<%= page_entries_info @students %>
		<% end %>

		<div class="my-3">	<%= paginate @students %></div>

		<%= render "students/list", students: @students %>

		<%= paginate @students %>

		<% if @students.size == 0 %>
			<div class="student blank-slate">
				<i class="fa fa-user"></i>
				<h1>Blocked Students</h1>
				<p>There are no blocked students in Papyrus right now.</p>
			</div>
		<% end %>

		<% end %>
	</div>
</div>
