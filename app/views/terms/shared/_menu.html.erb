<div class="row">
  <div class="col-4 col-md-4">
    <form action="<%= search_courses_terms_path %>" class="form-search">
    <div class="input-group">
      <span class="input-group-prepend">
        <span class="input-group-text"><i class="fas fa-search"></i></span>
      </span>
      <input type="text" placeholder="Search Course Code or Name" name="q" class="form-control search-query"  value="<%= params[:q].try(:strip) %>">
    </div>
    </form>    
  </div>

  <div class="col-8 text-right">
    <%= link_to new_term_path, class: "btn btn-sm btn-primary" do %>
      <i class="fa fa-plus"></i> Add New Term
    <% end %>
  </div>
</div>
<hr/>
