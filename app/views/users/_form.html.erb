
<%= simple_form_for @user, html: { class: "form-horizontal" } do |f| %>


		<%= f.input :first_name, required: false %>
		<%= f.input :last_name, required: false %>
	  <%= f.input :username, hint: username_hint, required: false %>
		<%= f.input :email, hint:  email_hint, required: false %>
		<%= f.input :password, required: true if Rails.configuration.is_authentication_method == :devise %>

	  <%= f.input :role, collection: User::ROLES, required: false %>
		<hr/>
		<%= f.button :submit, class: "btn btn-primary" %>		
		<%= link_to "Cancel", users_path, class: "btn btn-outline-secondary" %>


<% end %>
