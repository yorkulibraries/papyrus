<% if @recently_cancelled.size == 0 %>
  <div class="blank-slate text-center">

    <h6><i class="fas fa-bullhorn mr-2"></i> There are no cancelled requests right now.</h6>
    <p class="text-mute text-center">
      Items acquisitions can be cancelled through an acquisition request page
    </p>
  </div>

<% else %>
  <div class="list-group">
    <% @recently_cancelled.each do |r| %>
      <a class="list-group-item text-dark" href="<%= acquisition_request_path(r) %>">

        <h6 class="list-group-item-heading"><%= r.item.title rescue nil %></h6>
        <div class="row list-group-item-text text-muted">
          <div class="col-md-12">
            <span class="fas fa-calendar fa-fw"></span>
            <label>Cancelled:</label>
            <%= r.cancelled_at.strftime("%b %e, %Y") %>
          </div>
        </div>
        <div class="row list-group-item-text">
          <div class="col-md-12">
            <span class="fas fa-user fa-fw"></span>
            <label>By:</label>
            <%= r.cancelled_by.name rescue nil %>
          </div>
        </div>
      </a>
    <% end %>
  </div>
<% end %>
